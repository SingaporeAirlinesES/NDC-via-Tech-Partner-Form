    <script>
        let marketCount = 1;
        function addMarketRow() {
            marketCount++;
            const container = document.getElementById('marketsContainer');
            const div = document.createElement('div');
            div.className = 'market-row';
            div.innerHTML = `
                <input type="text" name="mercado_${marketCount}" placeholder="Mercado">
                <input type="email" name="email_local_${marketCount}" placeholder="Email local">
                <input type="text" name="codigo_agente_${marketCount}" placeholder="Código Agente">
            `;
            container.appendChild(div);
        }

        document.getElementById('ndcForm').addEventListener('submit', function() {
            document.getElementById('submitBtn').innerText = "Enviando...";
        });

        document.getElementById('submissionDate').valueAsDate = new Date();
    </script>
