    <script>
        let marketCount = 1;

        function addMarketRow() {
            marketCount++;
            const container = document.getElementById('marketsContainer');
            const newRow = document.createElement('div');
            newRow.className = 'market-row';
            newRow.innerHTML = `
                <div class="form-group" style="margin-bottom:0;"><label>Mercado</label><input type="text" name="mercado_${marketCount}"></div>
                <div class="form-group" style="margin-bottom:0;"><label>POC local</label><input type="email" name="poc_local_${marketCount}"></div>
                <div class="form-group" style="margin-bottom:0;"><label>Cód. Agente</label><input type="text" name="codigo_agente_${marketCount}"></div>
            `;
            container.appendChild(newRow);
        }

        document.getElementById('ndcForm').addEventListener('submit', function(e) {
            // Procesar Checkboxes antes de enviar
            const paymentMethods = Array.from(document.querySelectorAll('.payment-method:checked'))
                .map(cb => cb.value).join(', ');
            document.getElementById('paymentMethodsHidden').value = paymentMethods || 'Ninguno';
            
            const ndcIntegration = Array.from(document.querySelectorAll('.ndc-integration:checked'))
                .map(cb => cb.value).join(', ');
            document.getElementById('ndcIntegrationHidden').value = ndcIntegration || 'Ninguna';

            // Cambiar texto del botón
            document.querySelector('.submit-btn span').textContent = "Enviando...";
        });

        document.getElementById('submissionDate').valueAsDate = new Date();
    </script>
